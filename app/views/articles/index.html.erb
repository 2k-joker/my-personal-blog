<h1 class='text-center mt-4'>Articles</h1>

<form action="">
  <div class="container">
    <div class="p-1 bg-light rounded rounded-pill shadow-sm mb-4">
      <div class="input-group">
        <input type="search" placeholder="Search articles" aria-describedby="button-addon1" class="form-control border-0 bg-light">
        <div class="input-group-append">
          <button id="button-addon1" type="submit" class="btn btn-link text-primary"><i class="fa fa-search"></i></button>
        </div>
      </div>
    </div>
  </form>

  <% @articles.each do |article| %>
    <div class="row justify-content-md-center">
      <div class="col-10 mt-4">
        <div class="card text-center shadow-lg p-3 mb-5 bg-white rounded">
          <div class="card-header font-italic">
            by <%= article.user.username %>
          </div>
          <div class="card-body">
            <h5 class="card-title"><%= link_to article.title, article_path(article.id), class: "text-success" %></h5>
            <p class="card-text"><%= truncate(article.description, length: 100) %></p>
            <%= link_to 'View', article_path(article.id), class: "btn btn-outline-success" %>
            <%= link_to 'Edit', edit_article_path(article.id), class: 'btn btn-outline-info' %> 
            <%= link_to 'Delete', article_path(article), method: :delete, data: {confirm: "Delete this article?"}, class: 'btn btn-outline-danger' %> 
          </div>
          <div class="card-footer text-muted">
            <small>Created <%= time_ago_in_words(article.created_at) %> ago,
            edited <%= time_ago_in_words(article.updated_at) %> ago</small>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>

