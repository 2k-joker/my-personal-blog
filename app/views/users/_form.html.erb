<div class='container'>
  <div class='row justify-content-center'>
    <div class="col-10">
      <%= render 'shared/errors', obj: @user %>
      <%= form_with(model: @user, class: "shadow-lg p-3 mb-5 bg-info rounded", local: true) do |f| %>
        <div class="form-group row">
          <%= f.label :username, class: "col-2 col-form-label text-light text-right" %>
          <div class="col-10">
            <%= f.text_field :username, class: 'form-control shadow rounded', placeholder: 'username' %>
          </div>
        </div>

        <div class="form-group row">
          <%= f.label :email, class: "col-2 col-form-label text-light text-right" %>
          <div class="col-10">
            <%= f.email_field :email, class: 'form-control shadow rounded', placeholder: 'email address' %>
          </div>
        </div>

        <div class="form-group row">
          <%= f.label :password, class: "col-2 col-form-label text-light text-right" %>
          <div class="col-10">
            <%= f.password_field :password, class: 'form-control shadow rounded', placeholder: 'password' %>
          </div>
        </div>

        <div class='form-group row justify-content-center'>
          <span class='tab'><%= f.submit "Sign Up", class: 'btn btn-outline-light btn-md' %><span>
          <%= link_to 'Cancel', root_path, class: 'btn btn-outline-danger btn-md' %>
        </div>
      <% end %>
    </div>
  </div>
</div>