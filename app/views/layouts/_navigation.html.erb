<nav class="navbar navbar-expand-lg navbar-light bg-light">
  <%= link_to '2k-Joker', root_path, class: 'navbar-brand', id: 'logo' %>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
  <span class="navbar-toggler-icon"></span>
  </button>

  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <li class="nav-item active">
        <%= link_to 'Articles', articles_path, class: 'nav-link' %>
      </li>
      <li class="nav-item">
        <%= link_to "Bloggers", users_path, class: 'nav-link' %>
      </li>
      <% if logged_in? && current_user.admin? %>
        <li class="nav-item dropdown">
          <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
              Categories
          </a>
          <div class="dropdown-menu" aria-labelledby="navbarDropdown">
              <%= link_to "New category", new_category_path, class: "dropdown-item"  %>
              <%= link_to "View categories", categories_path, class: "dropdown-item"  %>
          </div>
        </li>
      <% else %>
        <li class="nav-item">
          <%= link_to 'Categories', categories_path, class: 'nav-link' %>
        </li>
      <% end %>
    </ul>
    <ul class="navbar-nav ml-auto">
      <% if logged_in? %>
        <li class="nav-item dropdown">
          <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
             <strong><%= fa_icon 'user' %> <%= '[admin]' if current_user.admin? %> <%=  current_user.username %></strong>
          </a>
          <div class="dropdown-menu" aria-labelledby="navbarDropdown">
            <%= link_to "View profile", user_path(current_user), class: "dropdown-item" %>
            <%= link_to "Edit profile", edit_user_path(current_user), class: "dropdown-item" %>
            <%= link_to 'Logout', logout_path, class: "dropdown-item", method: :delete %>
            <%= link_to 'Delete account', user_path(current_user), class: "dropdown-item text-danger",
                method: :delete, data: { confirm: "It's ok... I'm not offended. I'm sure you didn't mean to do that. Now go ahead and hit 'Cancel'" } %>
          </div>
        </li>
      <% else %>
        <li class="nav-item dropdown">
          <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            <strong>Account</strong>
          </a>
          <div class="dropdown-menu" aria-labelledby="navbarDropdown">
            <%= link_to "Login", login_path, class: "dropdown-item" %>
            <div class="dropdown-divider"></div>
            <%= link_to "Sign Up", signup_path, class: "dropdown-item" %>
          </div>
        </li>
      <% end %>
    </ul>
    <form class="form-inline ml-3 my-2 my-md-0">
      <% if logged_in? %>
        <%= link_to 'New', new_article_path, class: 'btn btn-outline-success my-2 my-sm-0'%>
      <% else %>
        <%= link_to 'New', '#', class: 'btn btn-outline-secondary my-2 my-sm-0'%>
      <% end %>
    </form>
  </div>
</nav>